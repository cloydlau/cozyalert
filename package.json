{
  "name": "cozyalert",
  "version": "0.0.1",
  "private": false,
  "description": "Cozy presets for sweetalert2",
  "author": "cloydlau",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloydlau/cozyalert"
  },
  "exports": {
    ".": {
      "require": "./dist/cozyalert.umd.js",
      "import": "./dist/cozyalert.mjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/cozyalert.umd.js",
  "module": "./dist/cozyalert.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "clean": "rd /s /q .\\node_modules",
    "ri": "npm run clean && pnpm i",
    "u": "node scripts/upgrade.js",
    "r": "node scripts/release.js",
    "rs": "node scripts/release.js --straightforward"
  },
  "dependencies": {
    "sweetalert2": "latest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "latest",
    "chalk": "^4.1.2",
    "enquirer": "latest",
    "eslint": "latest",
    "execa": "^4.1.0",
    "husky": "latest",
    "lint-staged": "latest",
    "minimist": "latest",
    "semver": "latest",
    "typescript": "latest",
    "vite": "latest"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
